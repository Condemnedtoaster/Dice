<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.patrick.dice.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/rollResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lad os spille!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/rollButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/die2Image"
        android:layout_margin="25dp"
        android:text="Ruld!"
        android:onClick="rollDice"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="51dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/die1Image"
        android:layout_below="@+id/rollResult"
        android:layout_alignParentLeft="true"
        android:src="@drawable/die1"



        tools:layout_editor_absoluteY="137dp"
        tools:layout_editor_absoluteX="16dp"
        />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/die2Image"
        android:layout_below="@+id/rollResult"
        android:src="@drawable/die1"



        tools:layout_editor_absoluteY="137dp"
        tools:layout_editor_absoluteX="142dp"
        android:contentDescription="" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/die3Image"
        android:layout_below="@+id/rollResult"
        android:layout_alignParentRight="true"
        android:src="@drawable/die1"



        tools:layout_editor_absoluteY="137dp"
        tools:layout_editor_absoluteX="268dp"
        />

    <TextView
        android:id="@+id/scoreText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Score: 0"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        tools:layout_editor_absoluteX="130dp"
        tools:layout_editor_absoluteY="454dp" />




</android.support.constraint.ConstraintLayout>
